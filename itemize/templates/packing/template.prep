            <blockTopPadding length="2" />
            <blockBottomPadding length="2" />
            <blockLeftPadding length="3" />
            <blockRightPadding length="3" />
            <lineStyle kind="LINEBELOW" colorName="silver" start="0,1" stop="-1,-2" />
